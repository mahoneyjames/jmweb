extends layout

block content
    section.welcome.Section
        div.Container
            h1 Hi there, I'm James
            p I write software, and very occasional blog posts
            p For now, there's not much here...

    section.blog.Section
        div.Container
            h2 Blog! (sort of)
            div.posts
                each post in posts
                    div.postCard
                        a.title(href=post.permalink) 
                            h3 #{post.title}                        
                        p.summary #{post.summary}
                        p.when #{post.when.format("MMM Do YYYY")}


    -//pre=helpers.dump(posts)